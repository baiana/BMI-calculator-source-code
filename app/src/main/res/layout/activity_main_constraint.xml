<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/titleTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI calculator"
            android:fontFamily="@font/alfa_slab_one"
            android:textSize="34sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15"/>

    <android.support.v7.widget.AppCompatCheckBox
            android:text="Use Metric BMI formula\n(meters and kilos)"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/appCompatCheckBox"
            app:layout_constraintTop_toBottomOf="@id/heightEDTX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:hint="Your wheight (libs)"
            android:padding="18dp"
            android:fontFamily="@font/alfa_slab_one"
            android:textColorHint="#D2D6E9"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:id="@+id/wheightEDTX"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTXT"/>

    <EditText
            android:id="@+id/heightEDTX"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:hint="Your height (in)"
            android:padding="18dp"
            android:fontFamily="@font/alfa_slab_one"
            android:textColorHint="#D2D6E9"
            android:layout_marginTop="38dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wheightEDTX"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorAccent"
            android:text="Calculate!"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:elevation="5dp"
            android:padding="12dp"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatCheckBox"
            app:layout_constraintVertical_bias="0.42"/>

</android.support.constraint.ConstraintLayout>